/* pages/identify/identify.wxss */

.container {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: true;
}

.bgImg {
  width: 100%;
  height: 100%;
  filter: blur(10rpx);
  -webkit-filter: blur(6rpx);
  -ms-filter: blur(6rpx);
  -moz-filter: blur(6rpx);
  position: absolute;
}

.content {
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  flex-direction: column;
  background-color: rgba(100, 100, 100, 0.5);
}

.img {
  width: 480rpx;
  height: 400rpx;
  align-self: center;
  margin-top: 110rpx;
}

.identify {
  width: 95%;
  height: 300rpx;
  align-self: center;
  margin-top: 110rpx;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; 
}

.identify-layout {
  display: flex;
  flex-direction: row;
}

.identify-layout-image-error {
  width: 90rpx;
  height: 90rpx;
}


.identify-layout-image {
  width: 90rpx;
  height: 90rpx;
  animation: a 1s steps(12) infinite;
}

@keyframes a {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }

  to {
    -webkit-transform: rotate(1turn);
    transform: rotate(1turn);
  }
}

.identify-layout-text {
  margin-top: 30rpx;
  font-size: 30rpx;
  margin-left: 40rpx;
  color: #FFF;
}

.result {
  width: 95%;
  height: 300rpx;
  align-self: center;
  margin-top: 110rpx;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: row;
}

.result_layout {
  display: flex;
  flex-direction: column;
  align-self: center;
  align-items: center;
  margin-left: 30rpx;
}

.result_img {
  width: 200rpx;
  height: 200rpx;
  margin-top: 10rpx;
  border: 5rpx solid #FFF;
}

.result_gaili {
  font-size: 28rpx;
  color: #FFF;
  margin-top: 15rpx;
}

.result_info {
  display: flex;
  flex-direction: column;
  flex: 1;
  margin-top: 30rpx;
  margin-left: 30rpx;
}

.result_info_title {
  font-size: 45rpx;
  color: #FFF;
}

.result_info_extra {
  font-size: 28rpx;
  color: #DDD;
  margin-top: 10rpx;
}

.result_func {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

 .result_func_share {
  display: flex;
  flex-direction: column;
}

.result_func_share_btn {
  opacity: 0;
  position: absolute;
}

.result_func_img {
  width: 50rpx;
  height: 50rpx;
  align-self: flex-end;
  padding: 30rpx;
}

.result_more {
  font-size: 28rpx;
  color: #da7c0c;
  padding-right: 20rpx;
  height: 80rpx;
  line-height: 80rpx;

}

.close {
  width: 120rpx;
  height: 120rpx;
  background-color: #da7c0c;
  position: absolute;
  align-self: center;
  bottom: 40rpx;
  border-radius: 70rpx;
  display: flex;
  flex-direction: column;
}

.close-img {
  width: 40rpx;
  height: 40rpx;
  align-self: center;
  margin-top: 40rpx;
}