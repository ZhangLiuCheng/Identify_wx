/* pages/more/more.wxss */

.container {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.info {
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-size: 32rpx;
  color: #333;
  text-align: center;
  display: inline-block;
}

.item_bg {
  width: 95%;
  margin-left: 2.5%;
  height: 385rpx;
  display: flex;
  flex-direction: column;
  border-left: 1rpx solid #F4F4F4;
  border-top: 1rpx solid #F4F4F4;
  border-right: 1rpx solid #F4F4F4;
  border-bottom: 20rpx solid #FFF;
  /* justify-content: flex-end;  */
  background-color: #F4F4F4 
}

.item_img {
  width: 95%;
  height: 385rpx;
  position: absolute; 
  z-index: 0;
}

.item_content {
  width: 95%;
  background-color: rgba(100, 100, 100, 0.4);
  z-index: 1;
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  justify-content: space-between;
  align-items: center;
  /* margin-top: 185rpx;  */
  /* transform: translate(0, -100%);  */
}

.result_info {
  display: flex;
  flex-direction: column;
}

.result_info_title {
  font-size: 40rpx;
  color: #FFF;
}

.result_info_extra {
  font-size: 28rpx;
  color: #DDD;
  margin-top: 10rpx;
}

.item_gaili_btn {
  display: flex;
  flex-direction: column;
}

.item_gaili {
  font-size: 28rpx;
  color: #FFF;
  margin-top: 10rpx;
}

.item_btn {
  font-size: 24rpx;
  color: #FFF;
  width: 150rpx;
  margin-top: 10rpx;
  background-color: #da7c0c;
}

.ad {
  width: 95%;
  margin-left: 2.5%;
  border-left: 1rpx solid #F4F4F4;
  border-top: 1rpx solid #F4F4F4;
  border-right: 1rpx solid #F4F4F4;
  border-bottom: 20rpx solid #FFF;
  background-color: #F4F4F4 
}